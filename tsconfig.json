{
  "compileOnSave": true,

  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,

    "lib": [
      "dom",
      "es2015.promise",
      "es5",
      "es6",
      "ES2016",
      "ES2017.String",
      "ES2019",
      "ES2020.String"
    ],
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noResolve": false,
    "moduleResolution": "node"
  }
}
